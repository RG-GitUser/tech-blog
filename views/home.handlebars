<!-- Homepage Handlebars Template -->

<body>
  <div id="homepage-template">
    <h1 id="homeTitle"></h1>
    <div id="posts">
      {{#if blogPosts.length}}
        <h2>Latest Blog Posts</h2>
        <ul>
          {{#each blogPosts}}
            <li>
              <div class="blogPostContainer">
                <p>Title: {{name}}</p>
                <p>Content: {{content}}</p>
                <p>Posted by {{username}} on {{dateCreated}}</p>
                <div class="comments">
                  <h3>Comments</h3>
                  <ul>
                    {{#each comments}}
                      <li>{{this}}</li>
                    {{/each}}
                  </ul>
                </div>
              </div>
            </li>
          {{/each}}
        </ul>
      {{else}}
        <p>No blog posts yet.</p>
      {{/if}}
    </div>
  </div>
  <script src="js/home.js"></script>
</body>
</html>
